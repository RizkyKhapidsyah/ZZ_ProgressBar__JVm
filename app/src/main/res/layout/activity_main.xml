<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/PB_1_IDXML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/B_1_IDXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PB_1_IDXML"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="PijitanUntukProgressBar1"
        android:text="@string/B_1_IDXML" />

    <ProgressBar
        android:id="@+id/PB_2_IDXML"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/B_1_IDXML"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:max="100"
        android:progress="0" />

    <Button
        android:id="@+id/B_2_IDXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PB_2_IDXML"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="PijitanUntukProgressBar2"
        android:text="@string/B_2_IDXML" />

</RelativeLayout>